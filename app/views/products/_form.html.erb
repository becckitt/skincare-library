<%= form_for(@product, multipart: true) do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_area :name, cols: 30, rows: 2  %>
  </p>
  <p>
    <%= f.label :comment %> <br>
    <%= f.text_area :comment, cols: 50, rows: 10 %>
  </p>
  <p>
    <%= f.label :effective %> <br>
    <%= f.select :effective, [['Yes', true], ['No', false]] %>
  </p>
  <p class="image-section">
    <%= f.label :photo %> <br>
    <%= image_tag @product.photo.url(:thumb), class: "img-preview" if @product.photo_file_name? %><br>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit class: "link" %>
  </p>
<% end %>