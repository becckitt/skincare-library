<%= form_for(@product, multipart: true, html: {class: "product-form"}) do |f| %>
  <%= image_tag 'sparkle-emoji.png', class: "form-emoji sparkle" %>
  <%= image_tag 'sparkle-emoji.png', class: "form-emoji sparkle" %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_area :name, cols: 30, rows: 2  %>
  </p>
  <p>
    <%= f.label :comment %> <br>
    <%= f.text_area :comment, cols: 50, rows: 6 %>
  </p>
  <p class="wishlist-trigger">
    <%= f.label 'Add to wishlist?' %> <br>
    <%= f.check_box :wishlist %>
  </p>
  <p id="wishlist-options" style="display: none;">
    <%= f.label 'Link to product (optional)' %> <br>
    <%= f.text_area :link, cols: 30, rows: 1 %>
  </p>
  <p id="new-product-options">
    <%= f.label :effective %> <br>
    <%= f.select :effective, [['Yes', true], ['No', false]] %>
  </p>
  <p class="image-section">
    <%= f.label :photo %> <br>
    <%= image_tag @product.photo.url(:thumb), class: "img-preview" if @product.photo_file_name? %><br>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit class: "link" %>
  </p>
<% end %>